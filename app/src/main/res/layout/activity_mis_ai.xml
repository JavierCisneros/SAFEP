<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Foro.MisAI">

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="587dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="112dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btAtrasMI"
                android:layout_width="41dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="218dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mis"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnEspacioInversionM"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_trending_up_black_24dp" />

        <EditText
            android:id="@+id/InversionTit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="@string/finversion"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <ImageView
            android:id="@+id/btnEspacioAhorroM"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:src="@drawable/ic_monetization_on_black_24dp" />

        <EditText
            android:id="@+id/AhorroTit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="@string/fahorro"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>